ARG base_image_tag=latest
FROM dijksterhuis/cleverspeech:${base_image_tag}

USER cleverspeech
ARG branch=master
RUN cd ${CLEVERSPEECH_HOME} \
 && git checkout ${branch} \
 && git pull --recurse-submodules \
 && echo "Completed checkouts."
RUN python3 -m pip install --extra-index-url https://pypi.ngc.nvidia.com --user -e ${CLEVERSPEECH_HOME}
USER root